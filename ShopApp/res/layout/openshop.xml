<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadeScrollbars="true">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
   
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="纬度:"
      android:layout_weight="1"
      android:textSize="18dip"
    />
    <TextView
      android:id="@+id/lat"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="7"
      android:text=""
    />
    </LinearLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="经度:"
      android:layout_weight="1"
      android:textSize="18dip"
    />
    <TextView
      android:id="@+id/lng"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="7"
      android:text=""
    />
    </LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="店铺名:"
      android:layout_weight="1"
      android:textSize="18dip"
    />
    <EditText
      android:id="@+id/shopname"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="7"
      android:text=""
    />
    </LinearLayout>
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="店铺描述:"
      android:layout_weight="1"
      android:textSize="18dip"
    />
    <EditText
      android:id="@+id/shopdesc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="7"
      android:text=""
    />
    </LinearLayout>
      <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="店铺联系人:"
      android:textSize="18dip"
      android:layout_weight="1"
    />
    <EditText
      android:id="@+id/shoplinker"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="7"
      android:text=""
    />
    </LinearLayout>
      <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="店铺电话:"
      android:layout_weight="1"
      android:textSize="18dip"
    />
    <EditText
      android:id="@+id/shopphone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="7"
      android:text=""
    />
    </LinearLayout>
      <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="店铺qq:"
      android:textSize="18dip"
    />
    <EditText
      android:id="@+id/shopqq"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="7"
      android:text=""
    />
    </LinearLayout>
      <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="店铺地址:"
      android:textSize="18dip"
    />
    <EditText
      android:id="@+id/shopaddr"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="7"
      android:text=""
    />
    </LinearLayout>
 <LinearLayout 
    android:orientation= "vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="图片(选填):"
              android:textSize="18dip"
            />
      <LinearLayout 
        android:orientation= "horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <EditText
          android:id="@+id/shopimg"  
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:layout_weight="7"
          android:editable="false"
          android:text=""
          />
          <Button
              android:id="@+id/addimg"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="选择店图片"
            /> 
      </LinearLayout>
</LinearLayout>
  <Button
              android:id="@+id/openshop"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="开通"
            /> 
</LinearLayout>
</ScrollView>